{
  "manifest_version": 3,
  "name": "Weather from Current Location",
  "version": "1.0",
  "description": "Fetches and displays current weather using geolocation",
  "permissions": ["geolocation"],
  "host_permissions": ["https://api.openweathermap.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  }
}
